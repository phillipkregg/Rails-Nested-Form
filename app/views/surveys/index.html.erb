<h1>Listing surveys</h1>


<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @surveys.each do |survey| %>
  <tr>
    <td><%= survey.name %></td>
    <td><%= link_to 'Show', survey, :class => "btn btn-small" %></td>
    <td><%= link_to 'Edit', edit_survey_path(survey), :class => "btn btn-small" %></td>
    <td><%= link_to 'Destroy', survey, confirm: 'Are you sure?', method: :delete, :class => "btn btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Survey', new_survey_path, :class => "btn btn-large" %>
